<%= render 'branches/nav' %>
<div class="container mt-5">
  <h3 class="text-center mb-4">User Management</h3>
  
  <table class="table table-hover table-bordered"> 
    <thead class="table-dark"> 
      <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.phone %></td>
          <td><%= user.role.humanize %></td>
          <td>
            <div class="d-flex gap-2 justify-content-start"> 
              <%= link_to 'Show', user_path(user), class: 'btn btn-outline-dark btn-sm px-1' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-dark btn-sm px-1' %>
              <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark btn-sm px-1' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New User', new_user_path, class: 'btn btn-dark btn-lg px-20 w-100' %>
</div>

<%= render 'branches/footer' %>
