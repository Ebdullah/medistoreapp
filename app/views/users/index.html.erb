<div class="d-flex" style="min-height: 100vh;">
  <div class="container mt-5">
    <h3 class="text-center mb-4">User Management</h3>

    <div class="d-flex justify-content-between mb-4 align-items-center">
      <div class="d-flex align-items-center">
        <%= form_with url: users_path, method: :get, local: true, class: "d-flex align-items-center" do %>
          <label for="branch" class="me-2 mb-0">Filter by Branch:</label>
          <%= select_tag 'branch_id', options_for_select([['All', 'all']] + @branches.map { |branch| [branch.name, branch.id] }, params[:branch_id]), class: "form-select form-select-sm w-auto me-2" %>
          <%= submit_tag 'Filter', class: "btn btn-sm btn-dark" %>
        <% end %>
      </div>

      <div class="d-flex align-items-center">
        <%= render 'users/filter' %>
      </div>
    </div>



    <table class="table table-hover table-bordered"> 
      <thead class="table-dark"> 
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.phone %></td>
            <td><%= user.role.humanize %></td>
            <td>
              <div class="d-flex gap-2 justify-content-start"> 
                <%= link_to 'Show', user_path(user), class: 'btn btn-outline-dark btn-sm px-1' %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-dark btn-sm px-1' %>
                <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark btn-sm px-1' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New User', new_user_path, class: 'btn btn-dark btn-md w-100 mb-4' %>
  </div>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center">
  <%= paginate @users %>
</div>
