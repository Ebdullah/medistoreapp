<!-- Hero Section -->
<div class="hero-section text-light d-flex align-items-center" style="background-image: url('/assets/hero.jpg'); height: 60vh; background-size: cover; background-position: center;">
  <div class="container text-center">
    <h1 class="display-3 font-weight-bold">Welcome to MediStore Pro!</h1>
    <p class="lead">Your one-stop solution for all your medical needs</p>
    <a href="#branches" class="btn btn-md btn-light mt-3">Explore Branches</a>
  </div>
</div>

<%= render 'layouts/paragraph' %>


<!-- Branches Section -->
<div id="branches" class="container mt-5">
  <h2 class="text-center mb-4">Our Branches</h2>
  <div class="row">
    <% @branches.each do |branch| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <img src="<%= asset_path('med.jpg') %>" class="card-img-top" alt="<%= branch.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= branch.name %></h5>
            <p class="card-text text-muted"><%= branch.location %></p>
            <a href="#" class="btn btn-dark">Visit Branch</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Services Section -->
<div class="container mt-5">
  <h2 class="text-center mb-4">Our Services</h2>
  <div class="row text-center">
    <div class="col-md-4">
      <div class="icon mb-3">
        <i class="fa fa-pills fa-3x text-success"></i>
      </div>
      <h5>Medicine Delivery</h5>
      <p class="text-muted">Get medicines delivered at your doorstep with a simple order.</p>
    </div>
    <div class="col-md-4">
      <div class="icon mb-3">
        <i class="fa fa-notes-medical fa-3x text-success"></i>
      </div>
      <h5>Consultation</h5>
      <p class="text-muted">Consult our certified pharmacists for guidance and support.</p>
    </div>
    <div class="col-md-4">
      <div class="icon mb-3">
        <i class="fa fa-hand-holding-usd fa-3x text-success"></i>
      </div>
      <h5>Affordable Prices</h5>
      <p class="text-muted">We offer high-quality medicines at the most affordable prices.</p>
    </div>
  </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section bg-dark text-light py-5 text-center mt-5">
  <h3>Get Started with Us Today!</h3>
  <p class="lead">Join thousands of customers who trust us for their health needs.</p>
  <%# <a href="/signup" class="btn btn-lg btn-success">Sign Up Now</a> %>
</div>


