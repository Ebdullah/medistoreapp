<div class="d-flex" style="min-height: 100vh;">

<div class="container mt-5 py-2 d-flex justify-content-center">
  <div class="card shadow-sm p-3" style="width: 400px;"> 
    <h5 class="card-header text-center text-light bg-dark mb-3"> 
      User Details
    </h5>

    <div class="card-body">
      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>
      <p>
        <strong>Phone:</strong>
        <%= @user.phone %>
      </p>
      <p>
        <strong>Branch:</strong>
        <%= @user.branch.try(:name) || 'N/A' %>
      </p>
      <p>
        <strong>Role:</strong>
        <%= @user.role.humanize %>
      </p>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-3">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-dark px-3 py-1" %> 
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark px-3 py-1" %>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to 'Back to Users', users_path, class: 'btn btn-dark px-5 py-2' %>
    </div>
  </div>
</div>
</div>