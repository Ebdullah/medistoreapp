<!-- app/views/users/profile.html.erb -->
<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-dark text-light">
      <h1 class="mb-0">Your Profile</h1>
    </div>
    <div class="card-body">
      <h2 class="text-success mb-3">Your Account Details:</h2>
      <p><strong>Email:</strong> <span class="badge bg-light text-dark"><%= @user.email %></span></p>
      <p>
        <strong>Name:</strong> 
        <% if @user.name.present? %>
          <span class="badge bg-light text-dark"><%= @user.name %></span>
        <% else %>
          <span class="badge bg-danger">Not provided</span>
        <% end %>
      </p>
      <p>
        <strong>Phone:</strong> 
        <% if @user.phone.present? %>
          <span class="badge bg-light text-dark"><%= @user.phone %></span>
        <% else %>
          <span class="badge bg-danger">Not provided</span>
        <% end %>
      </p>
    </div>
  </div>
</div>
