<div class="container mt-4">
  <div class="row justify-content-center"> 
    <div class="col-md-6 mb-5"> 
      <div class="card shadow p-4"> 
        <h2 class="text-center mb-4">User Form</h2> 

        <%= form_with model: @user, local: true do |form| %>
          <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group mb-3">
            <%= form.label :email %>
            <%= form.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :password %>
            <%= form.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :phone %>
            <%= form.hidden_field :country_code, id: 'country_code' %><br>
            <%= form.telephone_field :phone, id: 'phone', class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :branch_id, "Branch" %>
            <%= form.collection_select :branch_id, @branches, :id, :name, { prompt: true }, { class: 'form-control' } %>
          </div>

          <div class="form-group mb-3">
            <%= form.label :role %>
            <%= form.select :role, User.roles.keys.reject { |role| role == 'customer' }.map { |role| [role.humanize, role] }, { prompt: true }, { class: 'form-control' } %>
          </div>

          <div class="d-flex justify-content-center mt-4">
            <%= form.submit "Create User", class: 'btn btn-dark px-5 py-2' %>
          </div>
        <% end %>
      </div>
      <%= link_to 'Back to Users', users_path, class: 'btn btn-dark px-5 py-2 mt-4' %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'intl-tel-input' %>
