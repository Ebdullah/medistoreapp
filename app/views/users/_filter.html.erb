<%= form_with(url: users_path, method: :get, local: true, class: "mb-0") do %>
  <div class="justify-content-between align-items-center ms-5 mb-3">
    <div class="d-flex">
      <label for="per_page" class="me-2">Users per page:</label>
      <%= select_tag :per_page, options_for_select([5, 10, 25, 50], params[:per_page] || 5), 
                     onchange: 'this.form.submit()', class: "form-select form-select-sm w-auto" %>
    </div>
  </div>
<% end %>
