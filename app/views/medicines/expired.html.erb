<div class="d-flex" style="min-height: 100vh;">

  <div class="container mt-5">
    <h3 class="text-center mb-4">Expired Medicines</h3>

    <table class="table table-hover table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Date</th>
          <th>Branch</th>
        </tr>
      </thead>
      <tbody>
        <% @expired_medicines.each do |medicine| %>
          <tr>
            <td><%= medicine.name %></td>
            <td><%= medicine.description %></td>
            <td><%= number_to_currency(medicine.price) %></td>
            <td><%= medicine.stock_quantity %></td>
            <td><%= medicine.expiry_date.strftime('%Y-%m-%d') if medicine.expiry_date %></td>
            <td><%= medicine.branch.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
