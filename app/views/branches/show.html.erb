<%= render 'branches/nav'%>

<div class="container mt-5 py-2">
  <div class="card shadow p-4"> 
    <h2 class="text-center mb-4">Branch Details</h2> 

    <div class="text-center mb-3"> <!-- Center the content horizontally -->
      <p>
        <strong>Name:</strong>
        <%= @branch.name %>
      </p>
    </div>

    <div class="text-center mb-3"> <!-- Center the content horizontally -->
      <p>
        <strong>Location:</strong>
        <%= @branch.location %>
      </p>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-4"> <!-- Flexbox for button layout, centered and spaced -->
      <%= link_to 'View Medicines', branch_medicines_path(@branch), class: 'btn btn-outline-dark px-4 py-2' %> <!-- Button with padding -->
      <%= link_to 'Edit', edit_branch_path(@branch), class: 'btn btn-outline-dark px-4 py-2' %> <!-- Button with padding -->
    </div>
  </div>
</div>
      <%= link_to 'Back', branches_path, class: 'btn btn-dark px-5 py-2 ms-3 mt-3' %> 

