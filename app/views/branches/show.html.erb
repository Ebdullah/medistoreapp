<div class="d-flex gap-5">
  <div class="container mt-5 ms-5 py-2 flex-grow-1">
    <div class="card shadow-sm p-4" style="max-width: 800px; margin-left: 20px;"> 
      <h2 class="card-header text-center text-light bg-dark mb-4">
        Branch Details
      </h2>

      <div class="card-body">
        <div class="ms-5 mb-3  mt-4 ">
          <p>
            <strong class="text-success">Name:</strong>
            <%= @branch.name %>
          </p>
        </div>

        <div class="ms-5 mb-3">
          <p>
            <strong class="text-success">Location:</strong>
            <%= @branch.location %>
          </p>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
          <% if policy(Branch).create? %>
            <%= link_to 'New Branch', new_branch_path, class: 'btn btn-dark btn-sm px-20 py-2 mt-5 w-100' %>
          <% end %>
        </div>
      </div>
    </div>
    <%= link_to 'Back', branches_path, class: 'btn btn-dark mt-4 ms-4'%>
  </div>
</div>

