<div class="d-flex" style="min-height: 100vh;">
  <div class="flex-grow-1 p-3 " style="margin-top: 4rem;">
    <div class="container">
      <h3 class="text-center mb-5">Branch Management</h3>

      <table class="table table-hover table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @branches.each do |branch| %>
            <tr>
              <td><%= branch.name %></td>
              <td><%= branch.location %></td>
              <td>
                <div class="d-flex gap-2 justify-content-start">
                  <%= link_to 'View Branch', branch_path(branch), class: 'btn btn-outline-dark btn-sm px-1' %>
                  <%= link_to 'Edit Branch Info', edit_branch_path(branch), class: 'btn btn-outline-dark btn-sm px-1' %>
                  <% if policy(branch).destroy? %>
                    <%= link_to 'Delete Branch', branch_path(branch), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark btn-sm px-1' %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
