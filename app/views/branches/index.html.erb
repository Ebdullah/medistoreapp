<%# ----------------------------------------------------------------------------- %>
<h1>Branches</h1>

<%= link_to 'New Branch', new_branch_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.location %></td>
        <td style="display: flex">
          <%= link_to 'Show', branch_path(branch), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Destroy', branch_path(branch), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
