<%= render 'branches/nav' %>
<%= render 'branches/paragraph' %>


<div class="container mt-5">
  <h3 class="text-center mb-4">Branch Management</h3>
  
  <table class="table table-hover table-bordered"> 
    <thead class="table-dark"> 
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @branches.each do |branch| %>
        <tr>
          <td><%= branch.name %></td>
          <td><%= branch.location %></td>
          <td>
            <div class="d-flex gap-2 justify-content-start"> 
              <%= link_to 'View Branch', branch_path(branch), class: 'btn btn-outline-dark btn-sm px-1' %>
              <%= link_to 'Edit Branch Info', edit_branch_path(branch), class: 'btn btn-outline-dark btn-sm px-1' %> 
              <%= link_to 'Delete Branch', branch_path(branch), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark btn-sm px-1' %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Branch', new_branch_path(@branch), class: 'btn btn-dark btn-lg px-20 w-100' %>
</div>

<%= render 'branches/footer'%>